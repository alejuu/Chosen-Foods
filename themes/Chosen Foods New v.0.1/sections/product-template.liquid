{% if section.blocks.size > 0 %}
  {% for block in section.blocks %}
    {% if block.type == "hero" %}
      {% include 'product-hero', type: 'block' %}
    {% endif %}
  {% endfor %}
{% endif %}

<!-- {% include 'collection-grid' %} -->

{% schema %}
{
  "name": "Product",
  "class": "product",
  "max_blocks": 20,
  "blocks": [
    {
      "type": "hero",
      "name": "Hero",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image Top"
        },
        {
          "type": "image_picker",
          "id": "text_image",
          "label": "Image Bottom"
        }
      ]
    }
  ]
}
{% endschema %}
