{% if section.blocks.size > 0 %}
  {% for block in section.blocks %}
    {% if block.type == "hero" %}
      {% include 'hero', type: 'block' %}
    {% elsif block.type == "hero_columns" %}
      {% include 'hero-columns', type: 'block' %}
    {% endif %}
  {% endfor %}
{% endif %}

{% schema %}
{
  "name": "Homepage",
  "class": "homepage",
  "max_blocks": 20,
  "blocks": [
    {
      "type": "hero",
      "name": "Hero",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image Top"
        },
        {
          "type": "image_picker",
          "id": "text_image",
          "label": "Image Bottom"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "Discover More"
        },
        {
          "type": "text",
          "id": "btn_text",
          "label": "Button Text",
          "default": "Shop Now"
        },
        {
          "id": "btn_link",
          "type": "url",
          "label": "Button link"
        },
        {
          "type":      "checkbox",
          "id":        "hero_full",
          "label":     "Full height Hero",
          "default":   false,
          "info":      "Check the box if hero is full height."
        },
        {
          "type":      "checkbox",
          "id":        "hero_top",
          "label":     "Top Hero",
          "default":   false,
          "info":      "Check the box if hero is at the top of the page."
        },
        {
          "type": "select",
          "id": "background_color",
          "options": [
            { "value": "green", "label": "Green"},
            { "value": "peach", "label": "Peach"},
            { "value": "orange", "label": "Orange"},
            { "value": "light_green", "label": "Light Green"},
            { "value": "light_peach", "label": "Light Peach"},
            { "value": "light_turquoise", "label": "Light Turquoise"},
            { "value": "light_yellow", "label": "Light Yellow"},
            { "value": "lighter_peach", "label": "Lighter Peach"},
            { "value": "lighter_green", "label": "Lighter Green"}
          ],
          "label": "Background Color"
        }
      ]
    },
    {
      "type": "hero_columns",
      "name": "Hero Columns",
      "settings": [
        {
          "type": "image_picker",
          "id": "image_one",
          "label": "Image Top"
        },
        {
          "type": "image_picker",
          "id": "text_image_one",
          "label": "Image Bottom"
        },
        {
          "type": "text",
          "id": "text_one",
          "label": "Button Text",
          "default": "Shop Now"
        },
        {
          "id": "btn_link_one",
          "type": "url",
          "label": "Button link"
        },
        {
          "type": "image_picker",
          "id": "image_two",
          "label": "Image Top"
        },
        {
          "type": "image_picker",
          "id": "text_image_two",
          "label": "Image Bottom"
        },
        {
          "type": "text",
          "id": "text_two",
          "label": "Button Text",
          "default": "Shop Now"
        },
        {
          "id": "btn_link_two",
          "type": "url",
          "label": "Button link"
        },
        {
          "type": "image_picker",
          "id": "image_three",
          "label": "Image Top"
        },
        {
          "type": "image_picker",
          "id": "text_image_three",
          "label": "Image Bottom"
        },
        {
          "type": "text",
          "id": "text_three",
          "label": "Button Text",
          "default": "Shop Now"
        },
        {
          "id": "btn_link_three",
          "type": "url",
          "label": "Button link"
        },
        {
          "type": "image_picker",
          "id": "image_four",
          "label": "Image Top"
        },
        {
          "type": "image_picker",
          "id": "text_image_four",
          "label": "Image Bottom"
        },
        {
          "type": "text",
          "id": "text_four",
          "label": "Button Text",
          "default": "Shop Now"
        },
        {
          "id": "btn_link_four",
          "type": "url",
          "label": "Button link"
        }
      ]
    }
  ]
}
{% endschema %}
