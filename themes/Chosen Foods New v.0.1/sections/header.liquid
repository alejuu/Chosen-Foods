<header>
  <nav class="navbar is-fixed-top" id="mainMenu" role="navigation" aria-label="main navigation">
    <div class="navbar-menu navbar-is-mobile is-flex-touch is-hidden-desktop is-paddingless is-shadowless">
      <div class="navbar-start-mobile">
        <a role="button" class="navbar-burger" data-target="navMenu" aria-label="menu" aria-expanded="false">
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
        </a>
      </div>
      <div class="navbar-brand-mobile">
        <a class="navbar-item is-flex" href="{{ shop.url }}">
          <img src="{{ 'chosen-logo.png' | asset_url }}" alt="Chosen Foods" width="112" height="28">
        </a>
      </div>
      <div class="navbar-end-mobile">
        <a class="navbar-item is-flex">
          <span class="icon">
            <i class="cf-icon-account-32"></i>
          </span>
        </a>
        <a href="/cart" class="navbar-item is-flex">
          <span class="icon">
            <i class="cf-icon-cart-32"></i>
          </span>
        </a>
      </div>
    </div>
    <div class="navbar-menu is-shadowless" id="navMenu">
      <div class="navbar-item navbar-item-float is-hidden-desktop">
        <a href="/pages/where-to-buy">
          <button class="button is-small is-rounded is-uppercase is-warning has-text-centered has-text-white">
            <span>Find a Store</span>
          </button>
        </a>
      </div>
      <div class="navbar-start">
        {% include 'menu-one' %}
        <div class="navbar-item search-item">
          {% include 'search-bar' %}
        </div>
        <div class="navbar-item is-hidden-desktop">
          <div class="container">
            <div>
              <h6 class="title is-3 has-text-white has-text-centered">Catch our drift</h6>
              <p class="has-text-white has-text-centered">
                Sign up to receive our exclusive deals, unique recipes, healthy living inspirations, and industry news.
              </p>
            </div>
            <div class="newsletter-form">
              {% include 'newsletter-form' %}
            </div>
          </div>
        </div>
        <div class="navbar-item is-hidden-desktop has-background-light-green">
          <div class="container">
            <h6 class="title is-3 has-text-white has-text-centered">Relationships need nourishment</h6>
            <p class="has-text-white has-text-centered">
              stay in the loop
            </p>
            <div class="social is-margin-center">
              <div class="columns is-mobile has-text-centered">
                <div class="column">
                  <a href="{{ section.settings.instagram_url }}">
                    <span class="icon is-medium">
                      <i class="cf-icon-instagram-32"></i>
                    </span>
                  </a>
                </div>
                <div class="column">
                  <a href="{{ section.settings.twitter_url }}">
                    <span class="icon is-medium">
                      <i class="cf-icon-twitter-32"></i>
                    </span>
                  </a>
                </div>
                <div class="column">
                  <a href="{{ section.settings.facebook_url }}">
                    <span class="icon is-medium">
                      <i class="cf-icon-facebook-32"></i>
                    </span>
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="navbar-item is-hidden-desktop">
          <div class="container">
            <div class="columns is-mobile">
              <div class="column">
                {% include 'menu-two' %}
              </div>
              <div class="column">
                {% include 'menu-three' %}
              </div>
            </div>
            <div class="container">
              <figure data-aos="fade-up" class="image">
                <img class="is-margin-center" src="{{ 'footer-menu.png' | asset_url }}">
              </figure>
            </div>
            <div class="columns">
              <div class="column">
                <p class="is-size-7 has-text-white">
                  1747 Hancock St, Ste A, San Diego, CA 92101 877.674.2244
                </p>
              </div>
              <div class="column">
                <p class="is-size-7 has-text-white">
                  Â© 2018 Chosen Foods LLC. All Rights Reserved.
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="navbar-brand is-hidden-touch">
        <a class="navbar-item is-flex" href="{{ shop.url }}">
          <img src="{{ 'chosen-logo.png' | asset_url }}" alt="Chosen Foods" width="112" height="28">
        </a>
      </div>
      <div class="navbar-end is-hidden-touch">
        <a href="/pages/where-to-buy" class="navbar-item">
          <button class="button is-small is-rounded is-uppercase is-warning has-text-centered has-text-white">
            <span>Find a Store</span>
          </button>
        </a>
        <a href="/account" class="navbar-item is-flex">
          <span class="icon">
            <i class="cf-icon-account-32"></i>
          </span>
        </a>
        <a href="/cart" class="navbar-item is-flex">
          <span class="icon">
            <i class="cf-icon-cart-32"></i>
          </span>
        </a>
      </div>
    </div>
  </nav>
</header>
{% schema %}
  {
    "name": "Header",
    "settings": [
      {
        "type": "link_list",
        "id": "one_linklist",
        "label": "Menu One",
        "default": "main-menu"
      },
      {
        "type": "link_list",
        "id": "two_linklist",
        "label": "Menu Two",
        "default": "main-menu"
      },
      {
        "type": "link_list",
        "id": "three_linklist",
        "label": "Menu Three",
        "default": "main-menu"
      },
      {
        "type": "url",
        "id": "instagram_url",
        "label": "Instagram Link"
      },
      {
        "type": "url",
        "id": "twitter_url",
        "label": "Twitter Link"
      },
      {
        "type": "url",
        "id": "facebook_url",
        "label": "Facebook Link"
      }
    ]
  }
{% endschema %}
