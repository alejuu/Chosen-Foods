{% if type == 'block' %}
  {% assign bar_linklist = block.settings.bar_linklist %}
{% else %}
  {% assign bar_linklist = section.settings.bar_linklist %}
{% endif %}
{% for link in linklists[bar_linklist].links %}
  {% if link.links == blank %}
    <a href="{{ link.url }}" class="navbar-item has-text-primary has-text-weight-bold">{{ link.title }}</a>
  {% endif %}
  {% if link.links != blank %}
    <div class="navbar-item has-dropdown is-hoverable">
      <a href="{{ link.url }}" class="navbar-link has-text-primary has-text-weight-bold">{{ link.title }}</a>
      <div class="navbar-dropdown">
        {% for childlink in link.links %}
          <a href="{{ childlink.url }}" class="navbar-item">{{ childlink.title }}</a>
        {% endfor %}
      </div>
    </div>
  {% endif %}
{% endfor %}
