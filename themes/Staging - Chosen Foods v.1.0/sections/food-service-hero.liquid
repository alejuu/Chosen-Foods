{% if section.blocks.size > 0 %}
  {% for block in section.blocks %}
    {% if block.type == "hero_banner_three" %}
      {% include 'hero-banner-three', type: 'block' %}
    {% endif %}
  {% endfor %}
{% endif %}

{% schema %}
{
  "name": "Food Service Hero",
  "class": "food-service-hero",
  "max_blocks": 20,
  "blocks": [
    {
      "type": "hero_banner_three",
      "name": "Hero",
      "settings": [
        {
          "type": "select",
          "id": "background_color",
          "options": [
            { "value": "green", "label": "Green"},
            { "value": "peach", "label": "Peach"},
            { "value": "orange", "label": "Orange"},
            { "value": "light_green", "label": "Light Green"},
            { "value": "light_peach", "label": "Light Peach"},
            { "value": "light_turquoise", "label": "Light Turquoise"},
            { "value": "light_yellow", "label": "Light Yellow"},
            { "value": "lighter_peach", "label": "Lighter Peach"},
            { "value": "lighter_green", "label": "Lighter Green"}
          ],
          "label": "Background Color"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image Top"
        },
        {
          "type": "image_picker",
          "id": "text_image",
          "label": "Image Bottom"
        }
      ]
    }
  ]
}
{% endschema %}