{% if section.blocks.size > 0 %}
  {% for block in section.blocks %}
    {% if block.type == "hero" %}
      {% include 'hero', type: 'block' %}
    {% elsif block.type == "hero_columns" %}
      {% include 'hero-columns', type: 'block' %}
    {% elsif block.type == "hero_banner" %}
      {% include 'hero-banner', type: 'block' %}
    {% elsif block.type == "hero_banner_two" %}
      {% include 'hero-banner-two', type: 'block' %}
    {% elsif block.type == "logos" %}
      {% include 'logos', type: 'block' %}
    {% endif %}
  {% endfor %}
{% endif %}

