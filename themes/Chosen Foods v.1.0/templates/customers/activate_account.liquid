<main class="activate-page">
  <section class="hero is-page">
    <div class="hero-body">
      <div class="content has-text-centered">
        <h1 class="title is-1 is-size-5-mobile has-text-centered has-text-primary is-marginless">Activate Account</h1>
      </div>
    </div>
  </section>
  <section class="section">
    <div class="container">
      <div class="content has-text-centered">
        <p class="title is-6 is-size-7-mobile is-marginless">Create your password to activate your account.</p>
        <hr>
        <div class="content has-text-left">
          {% form 'activate_customer_password' %}
            {{ form.errors | default_errors }}
            <div class="field">
              <label for="CustomerPassword" class="label">Password</label>
              <div class="control">
                <input class="input" type="password" value="" name="customer[password]" id="CustomerPassword">
              </div>
            </div>
            <div class="field">
              <label for="CustomerPasswordConfirmation" class="label">Confirm Password</label>
              <div class="control">
                <input class="input" type="password" value="" name="customer[password_confirmation]" id="CustomerPasswordConfirmation">
              </div>
            </div>
            <div class="field">
              <div class="control">
                <input type="submit" class="button is-link" value="Activate Account">
              </div>
            </div>
            <div class="field">
              <div class="control">
                <input type="submit" class="button is-link" name="decline" value="Decline Invitation">
              </div>
            </div>
          {% endform %}
        </div>

      </div>
    </div>
  </section>
</main>
